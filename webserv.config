server {
    listen 80;
    server_name example.com;
    host localhost;
    client_max_body_size 10000;
    root /website/;
    index index.html;

    location / {
    allow_methods GET POST DELETE;
    autoindex off;

    }

    location /website/pages {
        autoindex on;
        allow_methods GET POST DELETE;
        index all-pages.html;
    }

    error_page 404 /pages/404.html;
    error_page 500
    error_page 502
    error_page 503
    error_page 504 
    
}