server {
	listen 127.0.0.1:7700;
	server_name example.com;
	root /preview/;
	index index.html;

	location / {
		autoindex on;
		allow_methods GET POST DELETE;
		client_max_body_size 100000;
	}

	location /template {
		root /preview/template;
		allow_methods GET POST;
		index index.html;
	}
}

server {
	listen 127.0.0.1:7701;
	server_name example.at;
	client_max_body_size 1000;
	root test_site;
	index index.html;

	location / {
		allow_methods GET POST;
		proxy_pass contact-form;
	}

	location /contact-form {
		allow_methods DELETE;
	}
}

server {
	listen 127.0.0.1:7702;
	server_name example.at;
	client_max_body_size 1000;
	root nicol_website;
	index index.html;

	location / {
		allow_methods GET POST;
	}
}
