server {
    listen 80;
    server_name www.example.com example.org;
    host localhost;
    client_max_body_size 10000;
    root /website/;
    ;
    index index.html;

    location / {
    allow_methods GET POST DELETE;
    autoindex off;
    index all-pages.html;
    }

    location /website/pages {
        autoindex on;
        allow_methods GET POST DELETE;
    }

    error_page 404 /pages/404.html;
    error_page 500 /pages/500.html;
    error_page 502 /pages/502.html;
    error_page 503 /pages/503.html;
    error_page 504 /pages/504.html;
    
}
